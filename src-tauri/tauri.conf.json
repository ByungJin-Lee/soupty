{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "soupty",
  "version": "0.1.0",
  "identifier": "kr.byungjin.soupty.light",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "splashscreen",
        "title": "soupty",
        "width": 400,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "alwaysOnTop": true,
        "url": "/splash",
        "transparent": true,
        "shadow": false
      },
      {
        "label": "main",
        "title": "soupty",
        "width": 800,
        "minWidth": 450,
        "minHeight": 500,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "url": "/pending",
        "decorations": false,
        "titleBarStyle": "Transparent",
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNDNzExNEY4N0FFNjBFODYKUldTR0R1WjYrQlJ4UE45cFZjaGlwVFd1N0J4WUhaQzM1eHREWm9DbVRGUGFFQmJBYTJ5dFlnd3YK",
      "endpoints": [
        "https://github.com/byungjin-lee/soupty/releases/latest/download/latest.json"
      ]
    }
  }
}
